# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /demo/begin                 controllers.Application.takeDemoSurvey()
GET     /demo/complete/:requestId/:responseSetId              controllers.Application.completeDemoSurvey(requestId: String, responseSetId: String)
GET     /ram   controllers.Application.ram()


# API
OPTIONS /api/*wholepath                 controllers.BaseApiController.options(wholepath)
GET     /api/surveyResponses/:surveyId/:patientId        controllers.SurveyResponseApiController.findByPatientId(surveyId, patientId)
POST    /api/patients/create            controllers.PatientApiController.create()
GET     /api/patients/findAll           controllers.PatientApiController.findAll()

GET     /api/surveys/findAll            controllers.SurveyApiController.findAll()

# API documentation
OPTIONS /api-docs/*wholepath             controllers.BaseApiController.options(wholepath)
GET     /api-docs/patients               controllers.ApiHelpController.getResource(path = "/api/patients")
GET     /api-docs/surveyResponses        controllers.ApiHelpController.getResource(path = "/api/surveyResponses")

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
